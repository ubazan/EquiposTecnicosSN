@model IPagedList<EquiposTecnicosSN.Entities.Mantenimiento.Repuesto>

@Html.ActionLink("Nuevo Repuesto", "Create", null, htmlAttributes: new { @type = "button", @class = "btn btn-primary btn-table-create pull-left" })
<div class="pagedList" data-nqn-target="#repuestosList">
    @Html.PagedListPager(Model, page => Url.Action("Index", "Repuestos", new { page = page }), PagedListRenderOptions.Classic)
</div>
<table class="table table-hover table-responsive table-condensed table-striped">
    <thead>

        <tr>
            <th>
                C&oacute;digo
            </th>
            <th>
                Nombre
            </th>
            <th>
                Proveedor
            </th>
            <th>
                Costo
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>

        @if (Model.Count() == 0)
        {
            <tr>
                <td colspan="4" style="text-align: center">
                    No se encontraron resultados.
                </td>
            </tr>
        }

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Codigo)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Nombre)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Proveedor.Nombre)
                </td>
                <td>
                    @(item.Costo != null ? "$" : "") @Html.DisplayFor(modelItem => item.Costo)
                </td>
                <td class="action-columns">
                    <a class="btn btn-default btn-xs"
                       href="@Url.Action("Edit", new { id = item.RepuestoId })"
                       title="Editar Repuesto">
                        <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
                    </a>

                    <a class="btn btn-default btn-xs"
                       href="@Url.Action("Details", new { id = item.RepuestoId })"
                       title="Ver Repuesto">
                        <span class="glyphicon glyphicon-eye-open" aria-hidden="true"></span>
                    </a>
                    <a class="btn btn-default btn-xs"
                       href="@Url.Action("Delete", new { id = item.RepuestoId })"
                       title="Eliminar Repuesto">
                        <span class="glyphicon glyphicon-trash" aria-hidden="true"></span>
                    </a>
                </td>
            </tr>
        }
    </tbody>

</table>

