@model IPagedList<EquiposTecnicosSN.Entities.Mantenimiento.Repuesto>

@{
    ViewBag.Title = "Repuestos";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-md-12">
        <div class="panel panel-primary">
            <div class="panel-heading"><i class="fa fa-search fa-fw"></i> Buscar Repuesto</div>
            <div class="panel-body">
                <form id="formBuscarRepuestos" method="get" data-nqn-ajax="true" action="@Url.Action("Index", "Repuestos")" data-nqn-target="#repuestosList">
                    <div class="row" style="margin-bottom: 10px;">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label class="control-label" style="margin-top: 5px;">Nombre</label>
                                <input type="text" id="searchNombre" name="searchNombre" class="form-control text-box single-line" />
                            </div>
                            <div class="form-group">
                                <label class="control-label" style="margin-top: 5px;">C&oacute;digo</label>
                                <input type="text" id="searchCodigo" name="searchCodigo" class="form-control text-box single-line" />
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label class="control-label" style="margin-top: 5px;">Proveedor</label>
                                @Html.DropDownList("proveedorId", null, "Seleccione", htmlAttributes: new { @class = "form-control" })
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-12">
                            <input id="buscarRepuesto" type="submit" value="Buscar" class="btn btn-primary pull-right" />
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>


<div class="row">
    <div class="col-md-12">
        <div class="panel panel-default">
            <div class="panel-heading"><i class="fa fa-gears fa-fw"> </i> Listado de @ViewBag.Title</div>
            <div class="panel-body">

                <div class="row">
                    <div class="col-md-12">
                        <div id="repuestosList">
                            @Html.Partial("_RepuestosList", Model)
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>