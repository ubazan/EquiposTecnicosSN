@using EquiposTecnicosSN.Web.CustomExtensions
@model EquiposTecnicosSN.Entities.Mantenimiento.SolicitudRepuestoServicio
@{
    ViewBag.Title = "Solicitud de Repuesto o servicio";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@using (Html.BeginForm())
{
    
    <div class="row">
        <div class="col-md-12">

            <div class="panel panel-default">
                <div class="panel-heading">@ViewBag.Title</div>
                <div class="panel-body">
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    @Html.HiddenFor(model => model.OrdenDeTrabajoId)

                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label>
                                    @Html.DisplayNameFor(model => model.FechaInicio)
                                    @Html.HiddenFor(model => model.FechaInicio)
                                </label>
                                <p class="form-control-static">
                                    @Html.DisplayFor(model => model.FechaInicio)
                                </p>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                @Html.LabelFor(model => model.ProveedorId, "Proveedor", htmlAttributes: new { @class = "control-label" })
                                @Html.DropDownList("ProveedorId", null, "Ninguno", htmlAttributes: new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.ProveedorId, "", new { @class = "text-danger" })
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-12">
                            <div class="form-group">
                                @Html.LabelFor(model => model.Comentarios, htmlAttributes: new { @class = "control-label" })
                                @Html.TextAreaFor(model => model.Comentarios, htmlAttributes: new { @class = "form-control", rows = "5" })
                                @Html.ValidationMessageFor(model => model.Comentarios, "", new { @class = "text-danger" })
                            </div>
                        </div>
                    </div>
                    <hr />
                    <h2>Repuesto</h2>
                    @Html.EditorFor(model => model)
                      
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-6">
            <div class="form-group">
                <a href="@Url.Action("Details", Model.OrdenDeTrabajo.WebController(), new { id = Model.OrdenDeTrabajoId }, null)" class="btn btn-default"> Volver</a>
                <input type="submit" value="Guardar" class="btn btn-primary"/>
                @*if (Model.FechaCierre == null)
                {
                    <a href="@Url.Action("CloseOrdenDeTrabajo", new { id = Model.OrdenDeTrabajoId})" class="btn btn-info">Cerrar Solcitud de Repuesto</a>
                }*@
            </div>
        </div>
    </div>
}

