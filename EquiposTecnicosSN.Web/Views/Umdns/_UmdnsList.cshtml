@model IPagedList<EquiposTecnicosSN.Entities.Equipos.Info.Umdns>

@Html.ActionLink("Nuevo UMDNS", "Create", null, htmlAttributes: new { @type = "button", @class = "btn btn-primary btn-table-create pull-left" })
<div class="pagedList" data-nqn-target="#umdnsList" data-nqn-form="#formBuscarUmdns">
    @Html.PagedListPager(Model, page => Url.Action("Index", "Umdns", new { page = page }), PagedListRenderOptions.Classic)
</div>
<table class="table table-striped table-hover table-responsive table-condensed">
    <thead>
        <tr>
            <th>
                C&oacute;digo
            </th>
            <th>
                Nombre Completo
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @if (Model.Count() == 0)
        {
            <tr>
                <td colspan="2" style="text-align: center">
                    No se encontraron resultados.
                </td>
            </tr>
        }
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Codigo)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.NombreCompleto)
                </td>
                <td class="action-columns">
                    <a class="btn btn-default btn-xs"
                       href="@Url.Action("Edit", new { id = item.UmdnsId })"
                       title="Editar UMDNS">
                        <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
                    </a>
                    <!--                        
                    <a class="btn btn-default btn-xs"
                       href="@*Url.Action("Details", new { id = item.UmdnsId })*@"
                       title="Ver Equipo">
                        <span class="glyphicon glyphicon-eye-open" aria-hidden="true"></span>
                    </a>
                    -->
                    <a class="btn btn-default btn-xs"
                       href="@Url.Action("Delete", new { id = item.UmdnsId })"
                       title="Eliminar UMDNS">
                        <span class="glyphicon glyphicon-trash" aria-hidden="true"></span>
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>


