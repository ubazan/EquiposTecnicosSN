@model IPagedList<EquiposTecnicosSN.Entities.Equipos.Info.Sector>

@{
    ViewBag.Title = "Sectores";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-md-12">
        <div class="panel panel-primary">
            <div class="panel-heading"><i class="fa fa-search fa-fw"></i> Buscar Sector</div>
            <div class="panel-body">
                <div class="row">
                    <form id="formBuscarSector" method="get" data-nqn-ajax="true" action="@Url.Action("Index", "Sectores")" data-nqn-target="#sectoresList">
                        <div class="col-md-1">
                            <label class="control-label" style="margin-top: 5px;">Nombre</label>
                        </div>
                        <div class="col-md-9">
                            <input type="text" id="searchNombre" name="searchNombre" class="form-control text-box single-line" />
                        </div>
                        <div class="col-md-2">
                            <input id="buscarSector" type="submit" value="Buscar" class="btn btn-primary" />
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-md-12">
        <div class="panel panel-default">
            <div class="panel-heading"><i class="fa fa-hospital-o fa-fw"></i> Listado de @ViewBag.Title</div>
            <div class="panel-body">

                <div class="row">
                    <div class="col-md-12">
                        <div id="sectoresList">
                            @Html.Partial("_SectoresList", Model)
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
