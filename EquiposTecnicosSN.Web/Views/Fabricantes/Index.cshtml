@model IPagedList<EquiposTecnicosSN.Entities.Equipos.Info.Fabricante>

@{
    ViewBag.Title = "Fabricantes";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-md-12">
        <div class="panel panel-primary">
            <div class="panel-heading"><i class="fa fa-search fa-fw"></i> Buscar Fabricante</div>
            <div class="panel-body">
                <form id="formBuscarRepuestos" method="get" data-nqn-ajax="true" action="@Url.Action("Index", "Fabricantes")" data-nqn-target="#fabricantesList">
                    <div class="row" style="margin-bottom: 10px;">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label class="control-label" style="margin-top: 5px;">Nombre</label>
                                <input type="text" id="searchNombre" name="searchNombre" class="form-control text-box single-line" />
                            </div>
                            <div class="form-group">
                                <label class="control-label" style="margin-top: 5px;">Marca</label>
                                <input type="text" id="searchMarca" name="searchMarca" class="form-control text-box single-line" />
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label class="control-label" style="margin-top: 5px;">Modelo</label>
                                <input type="text" id="searchModelo" name="searchModelo" class="form-control text-box single-line" />
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-12">
                            <input id="buscarFabricante" type="submit" value="Buscar" class="btn btn-primary pull-right" />
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-md-12">
        <div class="panel panel-default">
            <div class="panel-heading"><i class="fa fa-building-o fa-fw"></i> Listado de @ViewBag.Title</div>
            <div class="panel-body">
                <div class="row">
                    <div class="col-md-12">
                        <div id="fabricantesList">
                            @Html.Partial("_FabricantesList", Model)
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
