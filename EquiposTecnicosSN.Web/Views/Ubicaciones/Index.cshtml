@model IEnumerable<EquiposTecnicosSN.Entities.Equipos.Info.Ubicacion>

@{
    ViewBag.Title = "Ubicaciones";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-md-12">
        <div class="panel panel-primary">
            <div class="panel-heading"><i class="fa fa-search fa-fw"></i> Buscar Ubicaci&oacute;n</div>
            <div class="panel-body">
                <div class="row">
                    <form id="formBuscarUbicacion" method="get" data-nqn-ajax="true" action="@Url.Action("Index", "Ubicaciones")" data-nqn-target="#ubicacionesList">
                        <div class="col-md-2">
                            <label class="control-label" style="margin-top: 5px;">Nombre</label>
                        </div>
                        <div class="col-md-8">
                            <input type="text" id="searchUbicacion" name="searchUbicacion" class="form-control text-box single-line" />
                        </div>
                        <div class="col-md-2">
                            <input id="buscarUbicacion" type="submit" value="Buscar" class="btn btn-primary" />
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-md-12">
        <div class="panel panel-default">
            <div class="panel-heading"><i class="fa fa-hospital-o fa-fw"></i> Listado de @ViewBag.Title</div>
            <div class="panel-body">

                <div class="row">
                    <div class="col-md-12">
                        <div id="ubicacionesList">
                            @Html.Partial("_UbicacionesList", Model)
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
