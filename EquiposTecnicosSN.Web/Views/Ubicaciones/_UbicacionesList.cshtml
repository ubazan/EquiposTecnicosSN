@model IPagedList<EquiposTecnicosSN.Entities.Equipos.Info.Ubicacion>

@Html.ActionLink("Nueva Ubicación", "Create", null, htmlAttributes: new { @type = "button", @class = "btn btn-primary btn-table-create pull-left" })
<div class="pagedList" data-nqn-target="#ubicacionesList" data-nqn-form="#formBuscarUbicacion">
    @Html.PagedListPager(Model, page => Url.Action("Index", "Ubicaciones", new { page = page }), PagedListRenderOptions.Classic)
</div>
<table class="table table-hover table-responsive table-condensed table-striped">
    <tr>
        <th>
            Nombre
        </th>
        <th></th>
    </tr>
    @if (Model.Count() == 0)
    {
        <tr>
            <td colspan="2" style="text-align: center">
                No se encontraron resultados.
            </td>
        </tr>
    }
    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nombre)
            </td>
            <td class="action-columns">
                <a class="btn btn-default btn-xs"
                   href="@Url.Action("Edit", new { id = item.UbicacionId })"
                   title="Editar Ubicación">
                    <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
                </a>
                <a class="btn btn-default btn-xs"
                   href="@Url.Action("Delete", new { id = item.UbicacionId })"
                   title="Eliminar Ubicación">
                    <span class="glyphicon glyphicon-trash" aria-hidden="true"></span>
                </a>
            </td>
        </tr>
    }

</table>





