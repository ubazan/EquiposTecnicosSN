@model IPagedList<EquiposTecnicosSN.Entities.Mantenimiento.StockRepuesto>
@{
    ViewBag.Title = "Stock de Repuestos";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-md-12">
        <div class="panel panel-primary">
            <div class="panel-heading"><i class="fa fa-search fa-fw"></i> Buscar Stock de Repuesto</div>
            <div class="panel-body">
                <form id="formBuscarStockRepuestos" method="get" data-nqn-ajax="true" action="@Url.Action("Index", "StockRepuestos")" data-nqn-target="#stockRepuestosList">
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label class="control-label" style="margin-top: 5px;">C&oacute;digo</label>
                                <input type="text" id="searchCodigo" name="searchCodigo" class="form-control text-box single-line" />
                            </div>
                            <div class="form-group">
                                <label class="control-label" style="margin-top: 5px;">Proveedor</label>
                                @Html.DropDownList("proveedorId", null, "Seleccione", htmlAttributes: new { @class = "form-control" })
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label class="control-label" style="margin-top: 5px;">Repuesto</label>
                                @Html.DropDownList("repuestoId", null, "Seleccione", htmlAttributes: new { @class = "form-control" })
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-12">
                            <input id="buscarStockRepuesto" type="submit" value="Buscar" class="btn btn-primary pull-right"/>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-md-12">
        <div class="panel panel-default">
            <div class="panel-heading"><i class="fa fa-archive fa-fw"></i> @ViewBag.Title</div>
            <div class="panel-body">
                <div class="row">
                    <div class="col-md-12">
                        <div id="stockRepuestosList">
                            @Html.Partial("_StockRepuestosList", Model)
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>