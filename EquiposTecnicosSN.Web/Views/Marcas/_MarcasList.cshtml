@model IPagedList<EquiposTecnicosSN.Entities.Equipos.Info.Marca>
@Html.ActionLink("Nueva Marca", "Create", "Marcas", new { fabricanteId = ViewBag.FabricanteId }, htmlAttributes: new { @type = "button", @class = "btn btn-primary btn-table-create pull-left" })
<div class="pagedList" data-nqn-target="#marcasList">
    @Html.PagedListPager(Model, page => Url.Action("Index", "Marcas", new { fabricanteId = ViewBag.FabricanteId, page = page }), PagedListRenderOptions.Classic)
</div>
<table class="table table-hover table-responsive table-condensed table-striped">
    <tr>
        <th>
            Nombre
        </th>
        <th></th>
    </tr>

    @if (Model.Count() == 0)
    {
        <tr>
            <td colspan="2" style="text-align: center">
                No se encontraron resultados.
            </td>
        </tr>
    }

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nombre)
            </td>
            <td class="action-columns">
                <a class="btn btn-default btn-xs"
                   href="@Url.Action("Edit", new { id = item.MarcaId })"
                   title="Editar Marca">
                    <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
                </a>
                <a class="btn btn-default btn-xs"
                   href="@Url.Action("Delete", new { id = item.MarcaId })"
                   title="Eliminar Marca">
                    <span class="glyphicon glyphicon-trash" aria-hidden="true"></span>
                </a>
                <a class="btn btn-default btn-xs"
                   href="@Url.Action("Index", "Modelos", new { marcaId = item.MarcaId })"
                   title="Ver Modelos">
                    Ver Modelos
                </a>
            </td>
        </tr>
    }
</table>

