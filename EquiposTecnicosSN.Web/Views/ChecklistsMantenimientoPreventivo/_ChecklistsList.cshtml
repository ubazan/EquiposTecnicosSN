@model IPagedList<EquiposTecnicosSN.Entities.Mantenimiento.ChecklistMantenimientoPreventivo>

@Html.ActionLink("Nuevo Checklist", "Create", null, htmlAttributes: new { @type = "button", @class = "btn btn-primary btn-table-create pull-left" })
<div class="pagedList" data-nqn-target="#checklistsList">
    @Html.PagedListPager(Model, page => Url.Action("Index", "ChecklistsMantenimientoPreventivo", new { page = page }), PagedListRenderOptions.Classic)
</div>
<table class="table table-hover table-responsive table-condensed table-striped">
    <thead>

        <tr>
            <th>
                Nombre
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @if (Model.Count() == 0)
        {
            <tr>
                <td colspan="2" style="text-align: center">
                    No se encontraron resultados.
                </td>
            </tr>
        }

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Nombre)
                </td>
                <td class="action-columns">
                    <a class="btn btn-default btn-xs"
                       href="@Url.Action("Edit", new { id = item.ChecklistMantenimientoPreventivoId })"
                       title="Editar Checklist">
                        <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
                    </a>

                    <a class="btn btn-default btn-xs"
                       href="@Url.Action("Download", new { id = item.ChecklistMantenimientoPreventivoId })"
                       title="Descargar Checklist">
                        <span class="glyphicon glyphicon-download" aria-hidden="true"></span>
                    </a>
                    
                    <a class="btn btn-default btn-xs"
                       href="@Url.Action("Delete", new { id = item.ChecklistMantenimientoPreventivoId })"
                       title="Eliminar Checklist">
                        <span class="glyphicon glyphicon-trash" aria-hidden="true"></span>
                    </a>                    
                </td>
            </tr>
        }
    </tbody>

</table>