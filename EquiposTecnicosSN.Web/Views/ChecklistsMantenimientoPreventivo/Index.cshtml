@model IPagedList<EquiposTecnicosSN.Entities.Mantenimiento.ChecklistMantenimientoPreventivo>
@{
    ViewBag.Title = "Checklists para Mantenimiento Preventivo";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-md-12">
        <div class="panel panel-primary">
            <div class="panel-heading"><i class="fa fa-search fa-fw"></i> Buscar Checklist</div>
            <div class="panel-body">
                <div class="row">
                    <form method="get" data-nqn-ajax="true" action="@Url.Action("Index", "ChecklistsMantenimientoPreventivo")" data-nqn-target="#checklistsList">
                        <div class="col-md-1">
                            <label class="control-label" style="margin-top: 5px;">Nombre</label>
                        </div>
                        <div class="col-md-9">
                            <input type="text" id="searchChecklist" name="searchChecklist" class="form-control text-box single-line" />
                        </div>
                        <div class="col-md-2">
                            <input id="buscar" type="submit" value="Buscar" class="btn btn-primary" />
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-md-12">
        <div class="panel panel-default">
            <div class="panel-heading"><i class="fa fa-list-alt fa-fw"></i> Listado de @ViewBag.Title</div>
            <div class="panel-body">

                <div class="row">
                    <div class="col-md-12">
                        <div id="checklistsList">
                            @Html.Partial("_ChecklistsList", Model)
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

