@model EquiposTecnicosSN.Entities.Equipos.Info.Traslado

@{
    ViewBag.Title = "Traslado";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@using (Html.BeginForm())
{
    
    <div class="row">
        <div class="col-md-12">
            <div class="panel panel-default">
                <div class="panel-heading">Nuevo @ViewBag.Title</div>
                <div class="panel-body">
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                @Html.LabelFor(model => model.EquipoId, "Equipo", htmlAttributes: new { @class = "control-label" })
                                @Html.DropDownList("EquipoId", null, htmlAttributes: new { @class = "form-control  ddl-traslado-equipo" })
                                @Html.ValidationMessageFor(model => model.EquipoId, "", new { @class = "text-danger" })
                            </div>

                            <div class="form-group">
                                @Html.LabelFor(model => model.UbicacionOrigenId, "Ubicación de origen", htmlAttributes: new { @class = "control-label" })
                                @Html.DropDownList("UbicacionOrigenId", null, htmlAttributes: new { @class = "form-control  ddl-traslado-origen" })
                                @Html.ValidationMessageFor(model => model.UbicacionOrigenId, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                @Html.LabelFor(model => model.FechaTraslado, htmlAttributes: new { @class = "control-label" })
                                @Html.EditorFor(model => model.FechaTraslado, new { htmlAttributes = new { @class = "form-control date-picker" } })
                                @Html.ValidationMessageFor(model => model.FechaTraslado, "", new { @class = "text-danger" })
                            </div>
                            <div class="form-group">
                                @Html.LabelFor(model => model.UbicacionDestinoId, "Ubicación de destino", htmlAttributes: new { @class = "control-label" })
                                @Html.DropDownList("UbicacionDestinoId", null, htmlAttributes: new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.UbicacionDestinoId, "", new { @class = "text-danger" })
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-6">
            <div class="form-group">
                <a href="@Url.Action("Index")" class="btn btn-default"> Volver</a>
                <input type="submit" value="Guardar" class="btn btn-primary" />
            </div>
        </div>
    </div>
}