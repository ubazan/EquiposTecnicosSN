@model IEnumerable<EquiposTecnicosSN.Entities.Equipos.Info.Traslado>

@{
    ViewBag.Title = "Traslados";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="row">
    <div class="col-md-12">
        <div class="panel panel-default">
            <div class="panel-heading">Listado de @ViewBag.Title</div>
            <div class="panel-body">
                <div class="row">
                    <div class="col-md-12">
                        @Html.ActionLink("Nuevo", "Create", null, htmlAttributes: new { @type = "button", @class = "btn btn-primary btn-table-create" })
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-12">
                        <table class="table table-hover table-responsive table-condensed table-striped">
                            <thead>

                            <tr>
                                <th>
                                    @Html.DisplayNameFor(model => model.Equipo)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.FechaTraslado)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.UbicacionOrigenId)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.UbicacionDestinoId)
                                </th>
                                <th></th>
                            </tr>
                            </thead>
                            <tbody>


                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Equipo.NombreCompleto)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.FechaTraslado)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.UbicacionOrigen.Nombre)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.UbicacionDestino.Nombre)
                                    </td>
                                    <td>
                                        <a class="btn btn-default btn-xs"
                                           href="@Url.Action("Edit", new { id = item.TrasladoId })"
                                           title="Editar Traslado">
                                            <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
                                        </a>

                                        <a class="btn btn-default btn-xs"
                                           href="@Url.Action("Details", new { id = item.TrasladoId })"
                                           title="Ver Traslado">
                                            <span class="glyphicon glyphicon-eye-open" aria-hidden="true"></span>
                                        </a>
                                        <a class="btn btn-default btn-xs"
                                           href="@Url.Action("Delete", new { id = item.TrasladoId })"
                                           title="Eliminar Traslado">
                                            <span class="glyphicon glyphicon-trash" aria-hidden="true"></span>
                                        </a>
                                    </td>
                                </tr>
                            }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
