@using EquiposTecnicosSN.Web.CustomExtensions
@model IPagedList<EquiposTecnicosSN.Entities.Mantenimiento.Proveedor>

@Html.ActionLink("Nuevo Proveedor", "Create", null, htmlAttributes: new { @type = "button", @class = "btn btn-primary btn-table-create pull-left" })
<div class="pagedList" data-nqn-target="#proveedoresList">
    @Html.PagedListPager(Model, page => Url.Action("Index", "Proveedores", new { page = page }), PagedListRenderOptions.Classic)
</div>
<table class="table table-hover table-responsive table-condensed table-striped">
    <tr>
        <th>
            Nombre
        </th>
        <th>
            Tipo
        </th>
        <th>
            Servicios
        </th>
        <th></th>
    </tr>

    @if (Model.Count() == 0)
    {
        <tr>
            <td colspan="4" style="text-align: center">
                No se encontraron resultados.
            </td>
        </tr>
    }

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nombre)
            </td>
            <td>
                @item.Tipo.DisplayName()
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Servicios)
            </td>
            <td class="action-columns">
                <a class="btn btn-default btn-xs"
                   href="@Url.Action("Edit", new { id = item.ProveedorId })"
                   title="Editar Proveedor">
                    <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
                </a>
                <a class="btn btn-default btn-xs"
                   href="@Url.Action("Details", new { id = item.ProveedorId })"
                   title="Ver Proveedor">
                    <span class="glyphicon glyphicon-eye-open" aria-hidden="true"></span>
                </a>
                <a class="btn btn-default btn-xs"
                   href="@Url.Action("Delete", new { id = item.ProveedorId })"
                   title="Eliminar Proveedor">
                    <span class="glyphicon glyphicon-trash" aria-hidden="true"></span>
                </a>
            </td>
        </tr>
    }
</table>

