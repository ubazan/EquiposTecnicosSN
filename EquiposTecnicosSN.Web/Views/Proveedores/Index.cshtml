@model IPagedList<EquiposTecnicosSN.Entities.Mantenimiento.Proveedor>

@{
    ViewBag.Title = "Proveedores";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-md-12">
        <div class="panel panel-primary">
            <div class="panel-heading"><i class="fa fa-search fa-fw"></i> Buscar Proveedor</div>
            <div class="panel-body">
                <form id="formBuscarProveedores" method="get" data-nqn-ajax="true" action="@Url.Action("Index", "Proveedores")" data-nqn-target="#proveedoresList">
                    <div class="row" style="margin-bottom: 10px;">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label class="control-label" style="margin-top: 5px;">Nombre</label>
                                <input type="text" id="searchNombre" name="searchNombre" class="form-control text-box single-line" />
                            </div>
                            <div class="form-group">
                                <label class="control-label" style="margin-top: 5px;">Servicios</label>
                                <input type="text" id="searchServicios" name="searchServicios" class="form-control text-box single-line" />
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label class="control-label" style="margin-top: 5px;">Tipo</label>
                                <select class="form-control" id="searchTipo" name="searchTipo">
                                    <option selected="selected">Seleccione</option>
                                    <option value="0">Fabricante</option>
                                    <option value="1">Proveedor</option>
                                    <option value="2">Fabricante y Proveedor</option>
                                    <option value="3">Otro</option>
                                </select>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-12">
                            <input id="buscarProveedor" type="submit" value="Buscar" class="btn btn-primary pull-right" />
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-md-12">
        <div class="panel panel-default">
            <div class="panel-heading"><i class="fa fa-truck fa-fw"></i> Listado de @ViewBag.Title</div>
            <div class="panel-body">
                <div class="row">
                    <div class="col-md-12">
                        <div id="proveedoresList">
                            @Html.Partial("_ProveedoresList", Model)
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
