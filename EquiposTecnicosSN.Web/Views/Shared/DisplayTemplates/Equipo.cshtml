@using EquiposTecnicosSN.Web.CustomExtensions
@model EquiposTecnicosSN.Entities.Equipos.Equipo

<div class="row">
    <div class="col-md-12">
        <div class="panel panel-default">
            <div class="panel-heading"><i class="fa fa-medkit fa-fw"></i> Detalles de @ViewBag.Title</div>
            <div class="panel-body">

                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label>
                                @Html.DisplayNameFor(model => model.NombreCompleto)
                            </label>
                            <p class="form-control-static">
                                @Html.DisplayFor(model => model.NombreCompleto)
                            </p>
                        </div>

                        <div class="form-group">
                            <label>
                                @Html.DisplayNameFor(model => model.Ubicacion)
                            </label>
                            <p class="form-control-static">
                                @Html.DisplayFor(model => model.Ubicacion.Nombre)
                                @if (Model.Traslados.Count != 0)
                                {
                                    <a href="#" data-toggle="modal" data-target="#modalTrasladosEquipo" >Ver Traslados</a>
                                }
                            </p>
                        </div>

                        <div class="form-group">
                            <label>
                                @Html.DisplayNameFor(model => model.NumeroMatricula)
                            </label>
                            <p class="form-control-static">
                                @Html.DisplayFor(model => model.NumeroMatricula)
                            </p>
                        </div>
                    </div>

                    <div class="col-md-6">
                        <div class="form-group">
                            <label>
                                @Html.DisplayNameFor(model => model.UMDNS)
                            </label>
                            <p class="form-control-static">
                                @Html.DisplayFor(model => model.UMDNS)
                            </p>
                        </div>

                        <div class="form-group">
                            <label>
                                @Html.DisplayNameFor(model => model.Sector)
                            </label>
                            <p class="form-control-static">
                                @Html.DisplayFor(model => model.Sector.Nombre)
                            </p>
                        </div>

                        <div class="form-group">
                            <label>
                                @Html.DisplayNameFor(model => model.Estado)
                            </label>
                            <p class="form-control-static">
                                @Model.Estado.DisplayName()
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>