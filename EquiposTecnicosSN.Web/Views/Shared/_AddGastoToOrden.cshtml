@using HtmlHelpers.BeginCollectionItem
@model EquiposTecnicosSN.Entities.Mantenimiento.GastoOrdenDeTrabajo

    <tr class="gastoRow">
        @using (Html.BeginCollectionItem("gastos"))
        {
            @Html.HiddenFor(model => model.OrdenDeTrabajoId)
            @Html.HiddenFor(model => model.GastoOrdenDeTrabajoId)
            <td style="width:30%;">
                @Html.EditorFor(model => model.Concepto, new { htmlAttributes = new { @class = "form-control" } })
            </td>
            <td style="width:20%;">
                <div class="input-group">
                    <span class="input-group-addon">$</span>
                    @Html.EditorFor(model => model.Monto, new { htmlAttributes = new { @class = "form-control" } })
                </div>
            </td>
            <td>
                @Html.HiddenFor(model => model.GastoProveedorId)
                @Html.TextBoxFor(model => model.proveedor.Nombre, new { data_autocomplete_proveedor = Url.Action("AutocompleteProveedor", "ODTMantenimientoCorrectivo"), @class = "form-control" })
            </td>
        <td><a href="#" class="deleteGasto">Elminar</a></td>
    }
</tr>