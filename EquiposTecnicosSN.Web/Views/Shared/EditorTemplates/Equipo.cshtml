@model EquiposTecnicosSN.Entities.Equipos.Equipo


<div class="panel panel-default">
    <div class="panel-heading"><i class="fa fa-medkit fa-fw"></i> @ViewBag.Title</div>
    <div class="panel-body">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.EquipoId)

        <div class="row">
            <div class="col-md-6">
                <div class="form-group">
                    @Html.LabelFor(model => model.NombreCompleto, htmlAttributes: new { @class = "control-label" })
                    <input class="form-control text-box single-line"
                           data-umdns-autocomplete-nombre="@Url.Action("AutocompleteNombreUMDNS")"
                           data-val="true"
                           data-val-maxlength="El campo Nombre Completo debe tener como máximo '255' caracteres."
                           data-val-maxlength-max="255" 
                           data-val-required="El campo Nombre Completo es requerido."
                           id="NombreCompleto"
                           name="NombreCompleto" type="text" value="@Model.NombreCompleto">

                    @Html.ValidationMessageFor(model => model.NombreCompleto, "", new { @class = "text-danger" })
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.UMDNS, htmlAttributes: new { @class = "control-label" })
                    <input class="form-control text-box single-line"
                           data-umdns-autocomplete-codigo="@Url.Action("AutocompleteCodigoUMDNS")"
                           data-val="true"
                           data-val-maxlength="El campo UMDNS Completo debe tener como máximo '50'."
                           data-val-maxlength-max="255"
                           data-val-required="El campo UMDNS es requerido."
                           id="UMDNS"
                           name="UMDNS" type="text" value="@Model.UMDNS">
                    
                    @Html.ValidationMessageFor(model => model.UMDNS, "", new { @class = "text-danger" })
                </div>
                <div class="form-group">
                    @Html.LabelFor(model => model.Estado, htmlAttributes: new { @class = "control-label" })
                    @Html.EnumDropDownListFor(model => model.Estado, "Seleccione", new { @class = "form-control", data_val_range_min = 1, data_val_range = "El campo Estado es requerido." })
                    @Html.ValidationMessageFor(model => model.Estado, "", new { @class = "text-danger" })
                </div>

            </div>
            <div class="col-md-6">
                <div class="form-group">
                    @Html.LabelFor(model => model.UbicacionId, "Ubicación", htmlAttributes: new { @class = "control-label" })
                    @Html.DropDownList("UbicacionId", null, "Seleccione", htmlAttributes: new { @class = "form-control", data_val = "true", data_val_required = "El campo Ubicación es requerido.", data_val_range_min = 1, data_val_range = "El campo Ubicación es requerido." })
                    @Html.ValidationMessageFor(model => model.UbicacionId, "", new { @class = "text-danger" })
                </div>
                <div class="form-group">
                    @Html.LabelFor(model => model.SectorId, "Sector", htmlAttributes: new { @class = "control-label" })
                    @Html.DropDownList("SectorId", null, "Seleccione", htmlAttributes: new { @class = "form-control", data_val = "true", data_val_required = "El campo Sector es requerido.", data_val_range_min = 1, data_val_range = "El campo Sector es requerido." })
                    @Html.ValidationMessageFor(model => model.SectorId, "", new { @class = "text-danger" })
                </div>
                <div class="form-group">
                    @Html.LabelFor(model => model.NumeroMatricula, htmlAttributes: new { @class = "control-label" })
                    @Html.EditorFor(model => model.NumeroMatricula, new { htmlAttributes = new { @class = "form-control", @autocomplete = "off" } })
                    @Html.ValidationMessageFor(model => model.NumeroMatricula, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>
    </div>
</div>

