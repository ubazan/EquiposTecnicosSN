@model EquiposTecnicosSN.Entities.Equipos.Info.InformacionHardware

<div class="row">
    <div class="col-md-12">
        <div class="panel panel-default">
            <div class="panel-heading"><i class="fa fa-gears fa-fw"></i> Información del Equipo</div>

            <div class="panel-body">
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                @Html.HiddenFor(model => model.EquipoId)
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            @Html.LabelFor(model => model.FabricanteId, "Fabricante", htmlAttributes: new { @class = "control-label" })
                            @Html.DropDownList("FabricanteId", null, "Seleccione uno", htmlAttributes: new { @class = "form-control ddl-fabricante", data_nqn_action = Url.Action("GetMarcas", "InformacionHardware") })
                            @Html.ValidationMessageFor(model => model.FabricanteId, "", new { @class = "text-danger" })
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(model => model.MarcaId, "Marca", htmlAttributes: new { @class = "control-label" })
                            @Html.DropDownList("MarcaId", null, "", htmlAttributes: new { @class = "form-control ddl-marca", data_nqn_action = Url.Action("GetModelos", "InformacionHardware") })
                            @Html.ValidationMessageFor(model => model.MarcaId, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="col-md-6">
                        <div class="form-group">
                            @Html.LabelFor(model => model.ModeloId, "Modelo", htmlAttributes: new { @class = "control-label" })
                            @Html.DropDownList("ModeloId", null, "", htmlAttributes: new { @class = "form-control ddl-modelo" })
                            @Html.ValidationMessageFor(model => model.ModeloId, "", new { @class = "text-danger" })
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(model => model.NumeroSerie, htmlAttributes: new { @class = "control-label" })
                            @Html.EditorFor(model => model.NumeroSerie, new { htmlAttributes = new { @class = "form-control", data_val_required = "El campo Nº de Serie es requerido." } })
                            @Html.ValidationMessageFor(model => model.NumeroSerie, "", new { @class = "text-danger" })
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(model => model.AnioFabricacion, htmlAttributes: new { @class = "control-label" })
                            @Html.EditorFor(model => model.AnioFabricacion, new { htmlAttributes = new { @class = "form-control" } })
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>