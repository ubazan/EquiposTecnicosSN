@model EquiposTecnicosSN.Entities.Equipos.Info.Modelo

<div class="panel panel-default">
    <div class="panel-heading">Editar @ViewBag.Title</div>
    <div class="panel-body">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.ModeloId)
        <div class="row">
            <div class="col-md-6">
                <div class="form-group">
                    @Html.LabelFor(model => model.Nombre, htmlAttributes: new { @class = "control-label" })
                    @Html.EditorFor(model => model.Nombre, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Nombre, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    @Html.LabelFor(model => model.MarcaId, "Marca", htmlAttributes: new { @class = "control-label" })

                    @if (Model.ModeloId == 0)
                    {
                        @Html.DropDownList("MarcaId", null, htmlAttributes: new { @class = "form-control", disabled = "disabled" })
                        @Html.HiddenFor(model => model.MarcaId)
                    } else
                    {
                        @Html.DropDownList("MarcaId", null, htmlAttributes: new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.MarcaId, "", new { @class = "text-danger" })
                    }

                </div>
            </div>
        </div>
    </div>
</div>
