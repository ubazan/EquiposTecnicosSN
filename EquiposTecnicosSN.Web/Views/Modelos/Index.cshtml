@model IPagedList<EquiposTecnicosSN.Entities.Equipos.Info.Modelo>

@{
    ViewBag.Title = "Modelos de " + ViewBag.NombreMarca;
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-md-12">
        <div class="panel panel-primary">
            <div class="panel-heading"><i class="fa fa-search fa-fw"></i> Buscar Modelo</div>
            <div class="panel-body">
                <form id="formBuscarRepuestos" method="get" data-nqn-ajax="true" action="@Url.Action("Index", "Modelos")" data-nqn-target="#modelosList">

                    <input type="hidden" name="marcaId" id="marcaId" value="@ViewBag.MarcaId" />

                    <div class="row" style="margin-bottom: 10px;">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label class="control-label" style="margin-top: 5px;">Nombre</label>
                                <input type="text" id="searchNombre" name="searchNombre" class="form-control text-box single-line" />
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-12">
                            <input id="buscarModelo" type="submit" value="Buscar" class="btn btn-primary pull-right" />
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-md-12">
        <div class="panel panel-default">
            <div class="panel-heading"><i class="fa fa-tag fa-fw"></i> Listado de @ViewBag.Title de la marca: @ViewBag.NombreMarca</div>
            <div class="panel-body">

                <div class="row">
                    <div class="col-md-12">
                        <div id="modelosList">
                            @Html.Partial("_ModelosList", Model)
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-md-12">
        <a href="@Url.Action("Index", "Marcas", new { fabricanteId = ViewBag.FabricanteId })" class="btn btn-default"> Volver</a>
    </div>
</div>
